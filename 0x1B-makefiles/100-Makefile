CC=gcc
SRC = main.c holberton.c
OBJ = $(SRC:.c=.o)
NAME=holberton
CFLAGS = -Wall -Werror -Wextra -pedantic

.PHONY: all
all: $(OBJ) m.h
	$(CC) $(OBJ) -o $(NAME)

.PHONY: clean
clean: 
	$(RM) ~* $(NAME) 

.PHONY: oclean
oclean: 
	$(RM) $(OBJ) $(NAME)	

.PHONY: fclean
fclean: clean oclean


.PHONY: re
re: oclean $(OBJ) all
